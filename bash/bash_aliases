#
# BASH ALIASES
# 
# ============================================================================

# ls
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -oF'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# misc
alias ..='cd ..'
alias tmux='tmux -2' # force tmux to assume 256color terminal
